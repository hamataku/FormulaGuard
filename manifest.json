{
  "manifest_version": 3,
  "name": "Formula Guard",
  "version": "1.0",
  "description": "Guard your math formulas from Google Translate",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
     "matches":["*://*.idm.oclc.org/*"],
     "run_at": "document_end",
     "all_frames": false,
     "js":["content.js"]
    }
  ]
}